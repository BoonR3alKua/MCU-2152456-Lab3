#include "fsm_manual.h"

int red_temp;
int yellow_temp;
int green_temp;

void saveTempTime(){
    red_temp = red;
    yellow_temp = yellow;
    green_temp = green;
}

void fsm_manual_run(){
	switch (status) {
		case MAN_RED:
			setLightsTime(red_temp, 1);
			if(timer3_flag == 1){
				HAL_GPIO_TogglePin(LED_RED_H_GPIO_Port, LED_RED_H_Pin);
				HAL_GPIO_TogglePin(LED_RED_V_GPIO_Port, LED_RED_V_Pin);
				setTimer3(100);
			}
			if(isButton1Pressed() == 1){
				setHorizontalLeds(SET,SET,SET);
				setVerticalLeds(SET,SET, SET);
				setTimer3(100);
				status = MAN_YELLOW;
			}
			if(isButton2Pressed() == 1){
				red_temp++;
				if(red_temp >= 99) red_temp = red;
			}
			if(isButton3Pressed() == 1){
				red=  red_temp;
				green = red - yellow;
				status = INIT;
			}
			break;
		case MAN_YELLOW:
			setLightsTime(yellow_temp, 2);
			if(timer3_flag == 1){
				HAL_GPIO_TogglePin(LED_YELLOW_H_GPIO_Port, LED_YELLOW_H_Pin);
				HAL_GPIO_TogglePin(LED_YELLOW_V_GPIO_Port, LED_YELLOW_V_Pin);
				setTimer3(100);
			}
			if(isButton1Pressed() == 1){
				setHorizontalLeds(SET,SET,SET);
				setVerticalLeds(SET,SET, SET);
				setTimer3(100);
				status = MAN_GREEN;
			}
			if(isButton2Pressed() == 1){
				yellow_temp++;
				if(yellow_temp >= 99) yellow_temp = yellow;
			}
			if(isButton3Pressed() == 1){
				yellow =  yellow_temp;
				red = green + yellow;
				status = INIT;
			}
			break;
		case MAN_GREEN:
			setLightsTime(green_temp, 3);
			if(timer3_flag == 1){
				HAL_GPIO_TogglePin(LED_GREEN_H_GPIO_Port, LED_GREEN_H_Pin);
				HAL_GPIO_TogglePin(LED_GREEN_V_GPIO_Port, LED_GREEN_V_Pin);
				setTimer3(100);
			}
			if(isButton1Pressed() == 1){
				setHorizontalLeds(SET,SET,SET);
				setVerticalLeds(SET,SET, SET);
				status = INIT;
			}
			if(isButton2Pressed() == 1){
				green_temp++;
				if(green_temp >= 99) green_temp = green;
			}
			if(isButton3Pressed() == 1){
				green =  green_temp;
				red = green + yellow;
				status = INIT;
			}
			break;
		default:
			saveTempTime();
			break;
	}
}
